<%= bootstrap_form_for(order, html: {class: "col-lg-8 col-lg-offset-2 bg_color_white form-horizontal form-label-left"})  do |f| %>
	<%= f.error_messages %>

	<%= f.text_field :name, class: "form-control" %>
	<%= f.text_field :address, class: "form-control"%>
	<%= f.text_field :email, class: "form-control" %>
	<%= f.text_field :pay_type, class: "form-control" %>
	<%= f.submit 'Submit', class: "btn btn-default" %>
<% end %>
