<% if notice %>
	<p class="notice"><%= notice %></p>
<% end %>
<div class="container-fluid">
	<div class="row">
		<div class="book_cart col-lg-2">
			<h2 class="book_cart-title">Your Pragmatic Cart</h2>
			<div class="book_cart-list_wrapper">
				<ul class="book_cart-list">
				<% @cart.line_items.each do |item| %>
					<li class="book_cart-list_ele">
						<span class="cart_list-quantity"><%= item.quantity %> x </span>
						<span class="cart_list-title"><%= item.product.title %></span>
					</li>
				<% end %>
				</ul>
			</div>
			<p class="book_cart-total">总计: <%= number_to_currency(@cart.total) %></p>
		</div>
		<div class="book_list col-md-6">
			<div class="row">
				<h2 class="book_list-title">Book List</h2>
				<% @products.each do |product| %>
				<div class="book_list-ele">
					<div class="book_list-product_image"><%= image_tag product.image_url_url %> </div>
					<div class="book_list-product_info">
						<p class="book_list-product_title"><%= product.title %></p>
						<p class="book_list-product_des"><%= product.description %></p>
					</div>
				</div>
				<div class="book_list-price_line">
					<span class="book_list-product_price"><%= number_to_currency product.price %></span>
					<%= button_to 'Add to Cart', line_items_path(product_id: product), class: "btn btn-default book_list-add_to_cart" %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
