<% if @products.empty? %>
	<div class="book_list-no_book">
		Aha. There is no book!
	</div>
<% else %>
	<% @products.each do |product| %>
	<div class="book_list-ele">
		<div class="book_list-product_image"><%= image_tag product.image_url %> </div>
		<div class="book_list-product_info">
			<p class="book_list-product_title"><%= product.title %></p>
			<p class="book_list-product_des"><%= product.description %></p>
		</div>
	</div>

	<div class="book_list-price_line">
		<span class="book_list-product_price"><%= number_to_currency product.price %></span>
		<%= button_to t("store.index.addtocart"), line_items_path(product_id: product), class: "btn btn-success book_list-add_to_cart", remote: true %>
	</div>
	<% end %>
<% end %>
